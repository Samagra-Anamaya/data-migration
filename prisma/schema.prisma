  religion               String?
  gender                 String?
  aadhaar_no             String?
  student_name           String?
  father_name            String?
  mother_name            String?
  dob                    String?
  mobile_no              String?
  alternate_mobile_no    String?
  email_id               String?
  domicile_district      String?
  domicile_block         String?
  full_address           String?
  institute_name         String?
  institution_type       String?
  address_of_institution String?
  class                  String?
