generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model beneficiary_detail {
  aadhaarVaultReference     String @id
  beneficiaryName           String
  beneficiaryFatherName     String
  beneficiaryMotherName     String
  beneficiarySpouseName     String
  gender                    String
  dateOfBirth               String
  socialCategory            String
  address                   String
  districtName              String
  districtLGDCode           String
  blockName                 String
  blockLGDCode              String
  gpName                    String
  gpLGDCode                 String
  villageName               String
  villageLGDCode            String
  isDisable                 String
  maritalStatus             String
  educationalQualification  String
  spdpMemberId              String
  numberOfMemberInFamily    String
  rationCardNumber          String
  primarySourceOfLivelihood String
  spdpFamilyId              String
}

model scheme_transaction {
  id                     Int     @id @default(autoincrement())
  schemeCode             String
  aadhaarNumber          String
  aadhaarReferenceNumber String
  uniqueBeneficiaryId    String
  financialYear          String
  transactionType        String
  transactionAmount      Int
  inKindBenefitDetail    String
  transactionDate        String
  remarks                String?
  departmentData         Json?
}
