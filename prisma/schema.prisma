generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model beneficiary_detail {
  id                        Int    @id @default(autoincrement())
  aadhaarVaultReference     String
  beneficiaryName           String
  beneficiaryFatherName     String
  beneficiaryMotherName     String
  beneficiarySpouseName     String
  gender                    String
  dateOfBirth               String
  socialCategory            String
  address                   String
  districtName              String
  districtLGDCode           String
  blockName                 String
  blockLGDCode              String
  gpName                    String
  gpLGDCode                 String
  villageName               String
  villageLGDCode            String
  isDisable                 String
  maritalStatus             String
  educationalQualification  String
  spdpMemberId              String
  numberOfMemberInFamily    String
  rationCardNumber          String
  primarySourceOfLivelihood String
  spdpFamilyId              String
}

model scheme_transaction {
  id                     Int     @id @default(autoincrement())
  schemeCode             String
  aadhaarNumber          String
  aadhaarReferenceNumber String
  uniqueBeneficiaryId    String
  financialYear          String
  transactionType        String
  transactionAmount      Int
  inKindBenefitDetail    String
  transactionDate        String
  remarks                String?
  departmentData         Json?
  userId                 String  @default("")
}

model transaction_history_table {
  id                   String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  requestBody          Json[]
  containErrors        Boolean  @default(false)
  errors               Json[]   @default([])
  userId               String
  transactionStartTime DateTime
  transactionEndTime   DateTime
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model data_migration_status {
  id            Int    @id @default(autoincrement())
  district_code String
  batch_no      String
  total_batch   String
  status        Status

  @@unique([district_code, batch_no])
}

enum Status {
  STARTED
  PULLED
  SAVED_IN_DATABASE
  SAVED_IN_FILE
  FAILED_DURING_PULL
  FAILED_DURING_SAVE
}
